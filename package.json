{
  "name": "alienkuler",
  "version": "1.0.1",
  "private": true,
  "dependencies": {
    "antd": "^3.22.2",
    "ffi": "^2.3.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "3.1.1"
  },
  "main": "public/electron.js",
  "homepage": ".",
  "scripts": {
    "start": "cross-env BROWSER='none' react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "cross-env DEVMODE='true' yarn electron .",
    "dev": "concurrently --kill-others \"cross-env BROWSER='none' react-scripts start\" \"wait-on http://localhost:3000 && yarn electron-dev\"",
    "rebuild": "electron-rebuild -f -w ffi",
    "electron-build": "electron-builder",
    "clean": "rm -rf build dist",
    "dist": "yarn clean && yarn build && yarn electron-build"
  },
  "build": {
    "appId": "com.wangjinli.alienkuler",
    "productName": "AlienKuler",
    "nodeGypRebuild": false,
    "win": {
      "icon": "build/icon.png",
      "target": "nsis"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "allowElevation": false,
      "createDesktopShortcut": true,
      "oneClick": false
    },
    "files": [
      "build/**/*"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.0",
    "electron": "9.4.0",
    "electron-builder": "^21.2.0",
    "electron-rebuild": "^1.8.6",
    "wait-on": "^3.3.0"
  }
}
